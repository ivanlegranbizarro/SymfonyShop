{% extends 'admin/base.html.twig' %}

{% block title %}
  Products List
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-br from-blue-100 via-green-100 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-3xl p-8 sm:p-10 border border-blue-100">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-4xl font-extrabold text-blue-900 flex items-center gap-2"><span>Products List</span></h1>
        <a href="{{ path('app_product_add') }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-xl shadow hover:bg-blue-700 transition">Add New Product</a>
      </div>
      <div class="overflow-x-auto rounded-xl border border-gray-200 mt-10">
        <table class="w-full bg-white text-sm text-left">
          <thead class="bg-blue-100 text-blue-800 uppercase text-cs font-semibold tracking-wide">
            <tr>
              <th class="py-4 px-6">#</th>
              <th class="py-4 px-6">Image</th>
              <th class="py-4 px-6">Name</th>
              <th class="py-4 px-6">Category</th>
              <th class="py-4 px-6">Price</th>
              <th class="py-4 px-6">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white text-gray-700">
            {% for product in products %}
              <tr class="hover:bg-gray-50 transition duration-150">
                <td class="py-4 px-6 font-semibold text-gray-500">{{ loop.index }}</td>
                <td class="py-4 px6">
                  {% if product.image %}
                    <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.image }}" class="h-12 w-12 object-cover rounded-md border border-gray-300 shadow-sm" width="75" height="75" />
                  {% else %}
                    <span class="text-gray-400 italic">No Image</span>
                  {% endif %}
                </td>
                <td class="py-4 px-6 font-medium text-gray-900">{{ product.name }}</td>
                <td class="py-4 px-6">{{ product.category.name }}</td>
                <td class="py-4 px-6 font-medium text-gray-900">{{ product.price|number_format(2) }}</td>
                <td class="py-4 px-6">
                  <a href="{{ path('app_product_show', { id: product.id }) }}" class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-800 transition" title="View Product in detail"><span class="hidden sm:inline">View</span></a>
                </td>
              </tr>
            {% else %}
              <tr class="hover:bg-gray-50 transition duration-150">
                <td colspan="6" class="py-6 px-6 text-center text-gray-500 italic">No products found</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
