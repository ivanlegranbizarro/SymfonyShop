{% extends 'admin/base.html.twig' %}

{% block title %}
  Categories List
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-br from-blue-100 via-green-100 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-3xl p-8 sm:p-10 border border-blue-100">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-4xl font-extrabold text-blue-900 flex items-center gap-2"><span>Categories List</span></h1>
        <a href="{{ path('app_category_add') }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-xl shadow hover:bg-blue-700 transition">Add New Category</a>
      </div>
      <div class="overflow-x-auto rounded-xl border border-gray-200 mt-10">
        <table class="w-full bg-white text-sm text-left">
          <thead class="bg-blue-100 text-blue-800 uppercase text-cs font-semibold tracking-wide">
            <tr>
              <th class="py-4 px-6">#</th>
              <th class="py-4 px-6">Name</th>
              <th class="py-4 px-6">Description</th>
              <th class="py-4 px-6">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white text-gray-700">
            {% for category in categories %}
              <tr class="hover:bg-gray-50 transition duration-150">
                <td class="py-4 px-6 font-semibold text-gray-500">{{ loop.index }}</td>
                <td class="py-4 px-6 font-medium text-gray-900">{{ category.name }}</td>
                <td class="py-4 px-6">{{ category.description }}</td>
                <td class="py-4 px-6">
                  <a href="{{ path('app_category_show', { id: category.id }) }}" class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-800 transition" title="View Category"><span class="hidden sm:inline">View</span></a>
                </td>
              </tr>
            {% else %}
              <tr class="hover:bg-gray-50 transition duration-150">
                <td colspan="4" class="py-6 px-6 text-center text-gray-500 italic">No categories found</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
