{% extends 'admin/base.html.twig' %}

{% block title %}
  New Category
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-br from-blue-100 via-green-100 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto bg-white shadow-xl rounded-3xl p-8 sm:p-10 border border-blue-100">
      <h1 class="text-3xl font-bold text-blue-900 mb-6">New Category</h1>

      {{ form_start(form) }}
      {% for field in form %}
        {% if field.vars.name != '_token' %}
          <div class="mb-6">
            {{ form_label(field) }}
            {{ form_widget(field) }}
            {% if (field.vars.errors|length) > 0 %}
              <div class="text-red-600 text-sm mt-1">{{ form_errors(field) }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}

      <div class="flex items-center gap-4">
        <button type="submit" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-500 to-blue-500 text-white font-semibold rounded-lg hover:from-green-600 hover:to-blue-600 transition">Save Category</button>
        <a href="{{ path('app_category') }}" class="inline-flex items-center px-4 py-2 bg-gray-500 text-white font-semibold rounded-lg shadow hover:bg-gray-600 transition">Back to list</a>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
