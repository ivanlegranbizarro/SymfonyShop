{% extends 'admin/base.html.twig' %}

{% block title %}
  {{ category.name }} Detail
{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-br from-blue-100 via-green-100 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-3xl p-8 sm:p-10 border border-blue-100">
      <h1 class="text-3xl font-bold text-blue-900 mb-6">{{ category.name }} Detail</h1>

      <!-- Card para mostrar la categorÃ­a -->
      <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-200">
        <p class="text-lg font-semibold text-gray-900 mb-2">
          <span class="text-gray-600">ID:</span> {{ category.id }}
        </p>
        <p class="text-xl font-bold text-gray-800 mb-2">{{ category.name }}</p>
        <p class="text-gray-700">{{ category.description }}</p>
      </div>

      <!-- Botones de acciones -->
      <div class="flex items-center gap-4 mt-6">
        <a href="{{ path('app_category_edit', { id: category.id }) }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition">Edit Category</a>

        <form action="{{ path('app_category_delete', { id: category.id }) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this category?');">
          <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}" />
          <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-semibold rounded-lg shadow hover:bg-red-700 transition">Delete Category</button>
        </form>

        <a href="{{ path('app_category') }}" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white font-semibold rounded-lg shadow hover:bg-gray-700 transition">Back to list</a>
      </div>
    </div>
  </div>
{% endblock %}
